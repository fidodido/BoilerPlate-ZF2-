<script>
    $(document).ready(function () {

        var EXTERNAL_URL = "URI";
        var INTERNAL_URL = 'MVC';

        var app = {
            //
            //
            init: function () {

                var self = this;

                var optionTypeChecked = $('input[name=type]:checked').val();
                this.hideElements(optionTypeChecked, true);

                $('input[type=radio][name=type]').change(function () {
                    self.resetForm();
                    self.hideElements(this.value, false);
                });
            },
            //
            //
            resetForm: function () {

                /*
                 $('input[type=text][name=label]').val('');
                 $('input[type=text][name=url]').val('');
                 $('input[type=text][name=controller]').val('');
                 $('input[type=text][name=action]').val('');
                 $('input[type=text][name=route]').val('');
                 */
            },
            //
            //
            hideElements: function (value, edit) {

                switch (value) {
                    case INTERNAL_URL:

                        if (!edit) {
                            $('input[type=text][name=url]').val('');
                        }

                        $('#url-container').hide();
                        $('#controller-container').show();
                        $('#action-container').show();
                        break;
                    case EXTERNAL_URL:

                        if (!edit) {
                            $('input[type=text][name=url]').val('');
                        }

                        $('#url-container').show();
                        $('#controller-container').hide();
                        $('#action-container').hide();
                        break;
                }
            }

        };

        app.init();


    });
</script>

